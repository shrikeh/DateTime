{
    "name": "shrikeh/datetime",
    "description": "Simple boilerplate library for datetime periods and ranges",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Barney Hanlon",
            "email": "barney@shrikeh.net"
        }
    ],
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "shrikeh/testing-metapackage": "^0.2.0"
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Shrikeh\\DateTime\\": "src"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "infection/extension-installer": true,
            "phpstan/extension-installer": true
        }
    }
}
